<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--EditText with id editText-->
    <TextView
        android:id="@+id/text_view_id1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/text_view"
        android:textColor="#040404"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/text_view_id2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/text_view2"
        android:textColor="#040404"
        android:textSize="15dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/text_view_id3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/text_view3"
        android:textColor="#040404"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">

            <RadioButton
                android:id="@+id/radioEasy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="  Easy"
                android:layout_marginTop="20dp"
                android:checked="true"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/radioMedium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="   Medium"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />
            <RadioButton
                android:id="@+id/radioHard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="   Hard"
                android:layout_marginTop="20dp"
                android:textSize="20dp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/text_view_id4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:text="1"
            android:textColor="#040404"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/text_view_id5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:text="-"
            android:textColor="#040404"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/text_view_id6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:text="1"
                android:textColor="#040404"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>